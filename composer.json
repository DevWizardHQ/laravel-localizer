{
    "name": "devwizardhq/laravel-localizer",
    "description": "Laravel Localizer bridges Laravel translations to your SPA frontend (React/Vue/Inertia) and provides generated language assets, type-safe usage, and global translation helpers.",
    "keywords": [
        "laravel",
        "laravel-localizer",
        "localization",
        "internationalization",
        "i18n",
        "l10n",
        "translations",
        "language",
        "multilingual",
        "spa",
        "frontend",
        "typescript",
        "react",
        "vue",
        "inertia",
        "inertiajs",
        "php",
        "laravel-package",
        "devwizard"
    ],
    "homepage": "https://github.com/devwizardhq/laravel-localizer",
    "license": "MIT",
    "authors": [
        {
            "name": "IQBAL HASAN",
            "email": "iqbalhasan.dev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^11.0||^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/framework": "^11.0",
        "laravel/pint": "^1.14",
        "larastan/larastan": "^3.0",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "DevWizard\\Localizer\\": "src/",
            "DevWizard\\Localizer\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevWizard\\Localizer\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DevWizard\\Localizer\\LocalizerServiceProvider"
            ],
            "aliases": {
                "Localizer": "DevWizard\\Localizer\\Facades\\Localizer"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
